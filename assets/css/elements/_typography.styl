[lang="zh"] body,
[lang="zh"] h1,
[lang="zh"] h2,
[lang="zh"] h3,
[lang="zh"] h4,
[lang="zh"] h5,
[lang="zh"] h6,
[lang="zh"] .fs-h1,
[lang="zh"] .fs-h2,
[lang="zh"] .fs-h3,
[lang="zh"] .fs-h4,
[lang="zh"] .fs-h5,
[lang="zh"] .fs-h6  {
  // HanaMinB added to support non-Chinese computers (e.g. translators)
  // to view Unicode extension D+
