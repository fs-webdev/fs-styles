/*------------------------------------*\
  $GLOBAL
\*------------------------------------*/
html {
  font-size: unit($base-font-size, 'px');

  // CJK specific stack
  &[lang="zh"],
  &[lang="ja"],
  &[lang="ko"] {
    font-size: 16px;
  }

  @media $break-mobile {
    font-size: 12px;

    &[lang="zh"],
    &[lang="ja"],
    &[lang="ko"] {
      font-size: 14px;
    }
  }
}

body {
  color: $color-grey-body;
  font-family: $font-face-body;
  font-size: $font-size-medium;
  line-height: $line-height-medium;
}

// CJK specific stack

/*
 * 1. Do not increase letter-spacing for CJK font
 */
