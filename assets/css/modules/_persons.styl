/**
 * Person Vitals
 *
 * ##### Acceptable Use
 *
 * Use a person to display the name, lifespan, and id of a person.
 *
 * ##### Avoid
 *
 * Avoid letting the persons lifespan and id line wrap.
 *
 * @section
 * @sectionof Persons
 *
 * @example
 * <div>
 *   <div class="fs-person-vitals__name">
 *     <span class="fs-person-vitals__name-full" data-test="full-name">John Henry Doe</span>
 *   </div>
 *   <div class="fs-person-vitals__fs-person-details">
 *     <div class="fs-person-details__container">
 *       <span class="fs-person-details__lifeSpan" data-test="lifeSpan">1900-1960</span>
 *       <span class="fs-person-details__separator">&nbsp;•&nbsp;</span>
 *       <span class="fs-person-details__id" data-test="pid">5XG4-L2Y</span>
 *       <span class="fs-person-details__selection-stopper">​</span>
 *     </div>
 *   </div>
 * </div>
 */

 /*
  * 1. In CJK languages we shouldn't bold the person name because it makes the characters
  *    harder to read.
  */
.fs-person-vitals__name {
  overflow: ellipsis;
  font-size: $font-size-medium;
  line-height: $line-height-medium;
  font-weight: bold;
  color: $color-grey;

  .locale-zh &,
  .locale-ja &,
  .locale-ko & {
    font-weight: normal; /* [1] */
  }
}

.fs-person-vitals__link {
  font-weight: normal;
}

.fs-person-vitals__name-full,
.fs-person-vitals__name-given,
.fs-person-vitals__name-family {
  overflow: ellipsis;
}

.fs-person-vitals__name--split {
  display: none;
}

.fs-person-vitals__fs-person-details {
  overflow: ellipsis;
}

// do not use flex since flex adds newline characters to the end of text
// @see http://stackoverflow.com/questions/27970957/flexbox-adding-newline-to-clipboard
.fs-person-details__container {
  clearfix();
}

.fs-person-details__lifeSpan,
.fs-person-details__separator,
.fs-person-details__id,
.fs-person-details__birthPlace {
  float: left;
  font-size: $font-size-small;
  line-height: $line-height-small;
  white-space: nowrap;
}

.fs-person-details__lifeSpan {
  overflow: ellipsis;
}

.fs-person-details__selection-stopper {
  float: left;
  font-size: 0;
  line-height: 0;
}

.fs-person-details__lifeSpan:empty + .fs-person-details__separator {
  display: none;
}

.fs-person__fs-person-parents {
  clear: both;

  & .fs-couple {
    padding-left: 10px;  // 9px connector (width + border) + 1px extra for look
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.8s;

    &:before {
      border: 0;
    }
  }
}

.fs-person-parents__show-label {
  // @extend $a;
  display: inline-block;
  line-height: $line-height-small;
}

.fs-person-parents__hide-text {
  display: none;
}

.fs-person-parents__show-button:focus + .fs-person-parents__show-label {
  outline: thin dotted $color-grey-body;
  outline: 5px auto -webkit-focus-ring-color;
  outline-offset: -2px;
  text-decoration: underline;
}

.fs-person-parents__show-button:checked {

  + .fs-person-parents__show-label {

    .fs-person-parents__show-text {
      display: none;
    }

    .fs-person-parents__hide-text {
      display: inline;
    }
  }

  ~ .fs-couple {
    max-height: 100px;
  }
}



