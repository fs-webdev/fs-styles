/*------------------------------------*\
  $PERSON_VITALS
\*------------------------------------*/
.fs-person-vitals__name {
  overflow: ellipsis;
  font-size: pxToRem($font-size-medium);
  line-height: calcLineHeight($line-height-medium, $font-size-medium);
}

.fs-person-vitals__name-full,
.fs-person-vitals__name-given,
.fs-person-vitals__name-family {
  overflow: ellipsis;
}

.fs-person-vitals__name--split {
  display: none;
}

.fs-person-details__container {
  clearfix();
}

.fs-person-details__lifeSpan,
.fs-person-details__separator,
.fs-person-details__id,
.fs-person-details__birthPlace {
  float: left;
  font-size: pxToRem($font-size-small);
  line-height: calcLineHeight($line-height-small, $font-size-small);
}

.fs-person-details__lifeSpan {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 54%;
}

.fs-person-details__selection-stopper {
  float: left;
  font-size: 0;
  line-height: 0;
}

.fs-person-details__lifeSpan:empty + .fs-person-details__separator {
  display: none;
}

.fs-person-details__birthPlace {
  clear: both;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.fs-person__fs-person-parents {
  clear: both;

  & .fs-couple {
    padding-left: 10px;  // 9px connector (width + border) + 1px extra for look
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.8s;

    &:before {
      border: 0;
    }
  }
}

.fs-person-parents__show-label {
  @extend a;
  display: inline-block;
  line-height: calcLineHeight($line-height-small, $font-size-small);
}

.fs-person-parents__hide-text {
  display: none;
}

.fs-person-parents__show-button:focus + .fs-person-parents__show-label {
  outline: thin dotted $color-grey-body;
  outline: 5px auto -webkit-focus-ring-color;
  outline-offset: -2px;
  text-decoration: underline;
}

.fs-person-parents__show-button:checked {

  + .fs-person-parents__show-label {

    .fs-person-parents__show-text {
      display: none;
    }

    .fs-person-parents__hide-text {
      display: inline;
    }
  }

  ~ .fs-couple {
    max-height: 100px;
  }
}



/*------------------------------------*\
  $PERSON_GENDER
\*------------------------------------*/
.fs-person-gender {
  border-collapse: separate;
  display: table;
  width: 100%;
  table-layout: fixed;

  .fs-person-vitals {
    display: table-cell;
    vertical-align: middle;
  }
}

.fs-person-gender__container {
  display: table-cell;
  width: 0;
}

.fs-person-gender--small {
  width: 15px;
}

.fs-person-gender--medium {
  width: 30px;
}

.fs-person-gender__image {
  vertical-align: top;
  display: inline-block;
  position: relative;

  &[class*=fs-icon-small] {
    margin-top: 7px;
    height: 8px;
  }

  &[class*=fs-icon-medium] {
    margin-top: 10px;
    height: 22px;
  }
}





/*------------------------------------*\
  $PERSON_PORTRAIT
\*------------------------------------*/
.fs-person-portrait {
  display: table;
  position: relative;
}

.fs-person-portrait__container {
  display: table-cell;
}

.fs-person-portrait__portrait {
  background-color: #e0e0e0;
  background-position: center;
  background-size: 60%;
  border: solid 4px #fff;
  border-radius: 50%;
  box-shadow: 0 2px 3px 0 #636363;
  width: 66px;
  height: 66px;
  margin-right: 20px;
  position: relative;

  // make the icon responsive to the container
  &.fs-icon-before:before {
    width: 100%;
    height: 100%;
  }
}

.fs-person-portrait__portrait:before {
  content: '';
  position: absolute;
  background-position: inherit;
  background-size: inherit;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}

.fs-couple .fs-person-portrait__portrait {
  margin: 5px 20px 5px 0;
}

.fs-person-portrait__image {
  border-radius: 50%;
  position: relative;
  z-index: 1;
}

.fs-person-portrait__gender-wrapper {
  display: table-cell;
  vertical-align: middle;
}





/*------------------------------------*\
  $STYLE_VARIATIONS
\*------------------------------------*/
.fs-person {

  // INLINE
  &--inline {

    .fs-person-vitals__name {
      display: table-cell;
      vertical-align: top;
    }

    .fs-person-vitals__fs-person-details {
      display: table-cell;
      vertical-align: middle;
    }

    .fs-person-details__container {
      margin-left: 30px;
    }

    .fs-person-portrait__container {
      display: none;
    }
  }

  // STACKED
  &--stacked {

    .fs-person-portrait__container,
    .fs-person-portrait__gender-wrapper {
      display: table-row;
      text-align: center;
    }

    .fs-person-portrait__portrait {
      margin: 0 auto;
    }

    .fs-person-gender__container {
      display: none;
    }

    .fs-person-vitals__fs-person-details {
      left: 50%;
      position: relative;
      float: left;
    }

    .fs-person-details__container {
      left: -50%;
      position: relative;
      float: left;
    }

    .fs-person-vitals__name:not(.fs-person-vitals__name--sinotypic) {

      .fs-person-vitals__name--split {
        display: inline;
      }

      .fs-person-vitals__name-full {
        display: none;
      }
    }
  }

  // DARK
  &--dark {
    & .fs-couple:before,
    &.fs-person-vitals,
    & .fs-person-vitals,
    & .fs-person-gender__container,
    & .fs-person-portrait__container {
      color: #fff;
    }

    .fs-person-portrait__portrait {
      background-color: #57585a;
      border-color: #6c6d6f;
      box-shadow: none;
    }

    .fs-icon-large-male:before {
      @extends $icon-male-large-grey;
      background-position: inherit;
      background-size: inherit;
      background-repeat: no-repeat;
    }

    .fs-icon-large-female:before {
      @extend $icon-female-large-grey;
      background-position: inherit;
      background-size: inherit;
      background-repeat: no-repeat;
    }
  }

  // LIGHT
  &--light {
    .fs-person-portrait__portrait {
      background-color: #f4f4f4;
      border-color: #d9d9d9;
      box-shadow: none;
    }

    .fs-icon-large-male:before {
      @extends $icon-male-large-grey;
      background-position: inherit;
      background-size: inherit;
      background-repeat: no-repeat;
    }

    .fs-icon-large-female:before {
      @extend $icon-female-large-grey;
      background-position: inherit;
      background-size: inherit;
      background-repeat: no-repeat;
    }
  }
}

// COUPLE
.fs-couple {
  position: relative;

  &--info .fs-person-gender__image:after,
  &--portrait .fs-person-portrait__portrait:after {
    content: '';
    width: 8px;
    border: 1px solid currentcolor;
    border-right: 0;
    position: absolute;
  }

  .fs-person-gender__image:after {
    right: 100%;
  }

  .fs-person-portrait__portrait:after {
    left: -13px;  // 9px connector (width + border) + 4px portrait border
  }
}

.fs-person--husband,
.fs-person--wife {
  margin-left: -9px;  // 9px connector (width + border)
  padding-left: 9px;  // 9px connector (width + border)
  overflow: hidden;
}

.fs-couple__connector:after {
  height: 150px;  // large number that would go outside the overflow of the husband/wife
}

.fs-person--husband {
  padding-bottom: 5px;

  .fs-couple__connector:after {
    border-bottom: 0;
    top: 50%;
  }
}

.fs-person--wife {
  .fs-couple__connector:after {
    border-top: 0;
    bottom: 50%;
  }
}

// needed for couple within couple (e.g. showing parents of couples)
.fs-person__fs-person-parents .fs-person--wife .fs-couple__connector:after {
  border-bottom: 1px solid currentcolor;
  top: inherit;
}

.fs-person__fs-person-parents .fs-person--husband .fs-couple__connector:after {
  border-top: 1px solid currentcolor;
  bottom: inherit;
}





/*------------------------------------*\
  $STATES
\*------------------------------------*/

// Prevent a portrait image from being draggable. Image attributes to disable
// an image or prevent dragging do not work consistently across all browsers.
.disable-portrait-image {
  .fs-person-portrait__portrait:after {
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
  }
}