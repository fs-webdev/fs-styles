.fs-person {

  // INLINE
  &--inline {

    .fs-person-vitals__name {
      display: table-cell;
      vertical-align: top;
    }

    .fs-person-vitals__fs-person-details {
      display: table-cell;
      vertical-align: middle;
    }

    .fs-person-details__container {
      margin-left: 30px;
    }

    .fs-person-portrait__container {
      display: none;
    }
  }

  // STACKED
  &--stacked {

    .fs-person-portrait__container,
    .fs-person-portrait__gender-wrapper {
      display: table-row;
      text-align: center;
    }

    .fs-person-vitals {
      padding-top: 10px;
    }

    .fs-person-portrait__portrait {
      margin: 0 auto;
    }

    .fs-person-gender__container {
      display: none;
    }

    .fs-person-vitals__fs-person-details {
      margin-top: 5px;
      display: inline-block;
    }

    .fs-person-vitals__name:not(.fs-person-vitals__name--sinotypic) {
      line-height: 1.5rem;

      .fs-person-vitals__name--split {
        display: inline;
      }

      .fs-person-vitals__name-full {
        display: none;
      }
    }
  }

  // DARK
  &--dark {
    & .fs-couple:before,
    &.fs-person-vitals,
    & .fs-person-vitals,
    & .fs-person-gender__container,
    & .fs-person-portrait__container,
    & .fs-person-vitals__name {
      color: #fff;
    }

    &.fs-person-vitals,
    .fs-person-vitals {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale
    }

    .fs-person-details__container {
      color: $color-grey-background;
    }

    .fs-person-portrait__portrait {
      background-color: #57585a;
      border-color: #8c8d8f;
    }
  }

  // PERSON CARD
  &--person-card {
    .fs-person-portrait__portrait {
      background-color: transparent;
      background-size: 100%;
      border: 0;
      box-shadow: none;
      width: 44px;
      height: 44px;
      margin-right: 19px;
      margin-left: 22px;
    }

    .fs-person-vitals__name {
      font-size: 24px;
      line-height: 1;
    }

    a.fs-person-vitals__name-full:visited {
      color: $color-blue-link;
    }

    .fs-person-details__id {
      font-size: 14px;
    }
  }
}





